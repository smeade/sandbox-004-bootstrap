<div class="page-header">
  <%= link_to new_bootstrapped_post_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Bootstrapped post
  <% end %>
  <h1>Listing bootstrapped posts</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Published</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @bootstrapped_posts) do |bootstrapped_post| %>
        <td><%= bootstrapped_post.title %></td>
        <td><%= bootstrapped_post.body %></td>
        <td><%= bootstrapped_post.published %></td>
        <td><%= link_to 'Show', bootstrapped_post %></td>
        <td><%= link_to 'Edit', edit_bootstrapped_post_path(bootstrapped_post) %></td>
        <td><%= link_to 'Destroy', bootstrapped_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
